<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/recipeManLogo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/chef_recipes_book"/>
        <TextView
            android:id="@+id/recipeManTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/recipeManLogo"/>
        <TextView
            android:id="@+id/recipeManContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content here..."
            android:textSize="25sp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/recipeManLogo"
            android:layout_below="@id/recipeManTitle"/>
    </RelativeLayout>

</RelativeLayout>